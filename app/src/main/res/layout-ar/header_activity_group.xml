<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Header_RL_Holder"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal"
    android:background="@drawable/actionbar_background"
    android:weightSum="1"
>
    
     <TextView
        android:id="@+id/txtVenueHeading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
       android:layout_weight=".9"
        android:layout_gravity="center"
        android:gravity="center"
        
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/Header_Back_Button"
        android:layout_toRightOf="@+id/Header_Logo_Button"
        android:text="Side by Side Large(13 oz) with Toppings"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold" />

     <ImageButton
         android:id="@+id/Header_Back_Button"
         android:layout_width="64dp"
         android:layout_height="48dp"
         android:layout_alignParentRight="true"
         android:layout_centerVertical="true"
         android:paddingLeft="12dp"
         android:paddingRight="4dp"
         android:layout_weight=".1"
         android:adjustViewBounds="true"
         android:background="@android:color/transparent"
         android:src="@drawable/back"
         android:visibility="visible" />

     <ImageButton
         android:id="@+id/Header_Logo_Button"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/Header_Back_Button"
         android:layout_alignParentLeft="true"
         android:layout_margin="5dp"
         android:adjustViewBounds="true"
         android:background="@android:color/transparent"
         android:gravity="center"
         android:padding="10dp"
         android:src="@drawable/logo_header"
         android:visibility="visible" />

</RelativeLayout>