<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableLayout
        android:id="@+id/mailTable"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="visible" 
        android:weightSum="1">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".143"
            android:background="@color/dark_blue" 
            >

            <TextView
                android:id="@+id/fileNoText"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="right|center_vertical"
                android:layout_weight=".6"
                android:padding="2dp"
                android:textColor="@color/TV_Black"
                android:text="" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="right|center_vertical"
                android:layout_weight=".4"
                android:padding="2dp"
                android:textStyle="bold"
                android:textColor="@color/TV_Black"
                android:text="@string/file_no_table" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".143"
            android:background="@color/light_blue" >

            <TextView
                android:id="@+id/transactionNo"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="right|center_vertical"
                android:padding="2dp"
                android:layout_weight=".6"
                android:textColor="@color/TV_Black"
                android:text="" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="right|center_vertical"
                android:layout_weight=".4"
                android:padding="2dp"
                android:textStyle="bold"
                android:textColor="@color/TV_Black"    
                android:text="@string/transaction_no" />
        </TableRow>

        <TableRow
           android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".143"
            android:background="@color/dark_blue" >

            <TextView
                android:id="@+id/transactionType"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="right|center_vertical"
                android:layout_weight=".6"
                android:padding="2dp"
                android:textColor="@color/TV_Black"
                android:text="" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="right|center_vertical"
                android:layout_weight=".4"  
                android:padding="2dp"
                android:textStyle="bold"
                android:textColor="@color/TV_Black"
                android:text="@string/transaction_type" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".143"
            android:background="@color/light_blue" >

            <TextView
                android:id="@+id/procedureType"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="right|center_vertical"
                android:padding="2dp"
                android:textColor="@color/TV_Black"
                android:layout_weight=".6"     
                android:text="" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="right|center_vertical"
                android:layout_weight=".4"   
                android:padding="2dp"
                android:textStyle="bold"
                android:textColor="@color/TV_Black"
                android:text="@string/procedure_type" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".143"
            android:background="@color/dark_blue" >

            <TextView
                android:id="@+id/procedureDate"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="right|center_vertical"
                android:layout_weight=".6"
                android:padding="2dp"
                android:textColor="@color/TV_Black"
                android:text="" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="right|center_vertical"
                android:layout_weight=".4" 
                android:padding="2dp"
                android:textStyle="bold"
                android:textColor="@color/TV_Black"
                android:text="@string/procedure_date" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".143"
            android:background="@color/light_blue" >

            <TextView
                android:id="@+id/organizational"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="right|center_vertical"
                android:layout_weight=".6"
                android:padding="2dp"
                android:textColor="@color/TV_Black"          
                android:text="" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="right|center_vertical"
                android:layout_weight=".4"
				android:padding="2dp"
                android:textStyle="bold"
				android:textColor="@color/TV_Black"
                android:text="@string/organizational" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".143"
            android:background="@color/dark_blue" >

            <TextView
                android:id="@+id/responsible"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="right|center_vertical"
                android:layout_weight=".6"
                android:padding="2dp"
                android:textColor="@color/TV_Black"     
                android:text="" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="right|center_vertical"
                android:layout_weight=".4"    
                android:padding="2dp"
                android:textStyle="bold"
                android:textColor="@color/TV_Black"
                android:text="@string/responsible" />
        </TableRow>
    </TableLayout>

</LinearLayout>