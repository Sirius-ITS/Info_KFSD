<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableRow
        android:id="@+id/LL_serial_num"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#5B83B6"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:id="@+id/firstRowtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Cancel"
            android:layout_weight="0"
            android:textColor="#000000"
            android:gravity="left"/>
        <TextView
            android:id="@+id/firstRowLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/date"
            android:textColor="#000000"/>

    </TableRow>
  <TableRow
        android:id="@+id/LL_organisation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#5B83B6"
        android:orientation="horizontal"
        android:padding="5dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/ET_organisation"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Cancel"
            android:layout_weight="0"
            android:textColor="#000000"  />

        <TextView
            android:id="@+id/TV_organisation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/organizational"
            android:textColor="#000000"/>
    </TableRow>

    <TableRow
        android:id="@+id/LL_remark"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#D7DFEA"
        android:orientation="horizontal"
        android:padding="5dp"  >
 <TextView
            android:id="@+id/secondRowtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Cancel"
            android:singleLine="false"
            android:maxLines="4"
            android:maxWidth="200dp"
            android:layout_weight="0"
            android:textColor="#000000"
        android:gravity="left"/>

        <TextView
            android:id="@+id/secondRowLabel"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/organizational_level"
            android:textColor="#000000"/>


    </TableRow>

