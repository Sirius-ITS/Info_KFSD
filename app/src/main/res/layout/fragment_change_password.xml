<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/W_m_H_m"
    android:background="@drawable/main_background"
    
    android:orientation="vertical" >

    <ViewStub
        android:id="@+id/vsHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inflatedId="@+id/vsHeader"
        android:layout="@layout/header_activity_group" />

    <LinearLayout
        style="@style/W_m_H_w"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerInParent="true"
        android:background="@drawable/change_passs_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/loginTitle"
            style="@style/titleStyle"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="@string/change_pass" />

        <LinearLayout
            style="@style/W_m_H_w"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                style="@style/titleStyle"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_weight=".4"
                android:text="@string/old_password" />

            <EditText
                android:id="@+id/oldPassText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight=".6"
                android:inputType="textPassword"
                android:background="@drawable/field"
                android:maxLength="30" />
        </LinearLayout>

        <LinearLayout
            style="@style/W_m_H_w"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="1" >

            <TextView
                android:layout_width="0dp"
                style="@style/titleStyle"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_weight=".4"
                android:text="@string/new_password" />

            <EditText
                android:id="@+id/newPassText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight=".6"
                android:inputType="textPassword"
                android:background="@drawable/field"
                android:maxLength="30" />
        </LinearLayout>
        
        <LinearLayout
            style="@style/W_m_H_w"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                style="@style/titleStyle"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_weight=".4"
                android:text="@string/confirm_password" />

            <EditText
                android:id="@+id/confirmPassText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight=".6"
                android:inputType="textPassword"
                android:background="@drawable/field"
                android:maxLength="30" />
        </LinearLayout>

        <ImageView
            android:id="@+id/lineImage"
            style="@style/W_m_H_w"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/sprate_dot" />

        <ImageView
            android:id="@+id/loginImage"
            style="@style/W_w_H_w"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/save_btn" />
    </LinearLayout>

</RelativeLayout>